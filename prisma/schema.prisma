generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model follower {
  who_id  Int
  whom_id Int

  @@id([who_id, whom_id])
}

model message {
  message_id Int                   @id @default(autoincrement())
  author_id  Int
  text       String
  pub_date   Int?
  flagged    Int?
}

model user {
  user_id  Int                   @id @default(autoincrement())
  username String @unique
  email    String @unique 
  pw_hash  String
}
